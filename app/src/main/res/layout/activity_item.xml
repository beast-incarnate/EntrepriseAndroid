<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kunalsingh.entreprise.ui.activities.ItemActivity">

    <EditText
        android:id="@+id/et_item_name"
        android:layout_width="178dp"
        android:layout_height="39dp"
        android:hint="Name"
        android:layout_marginLeft="88dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="45dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.034" />

    <EditText
        android:id="@+id/et_item_price"
        android:layout_width="143dp"
        android:layout_height="35dp"
        android:hint="Price"
        android:layout_marginLeft="109dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/et_item_name"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.096"
        tools:layout_editor_absoluteY="146dp"
        tools:layout_editor_absoluteX="96dp" />

    <EditText
        android:id="@+id/et_item_quantity"
        android:layout_width="132dp"
        android:layout_height="43dp"
        android:hint="Quantity"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/et_item_price"
        android:layout_marginLeft="134dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/button_item_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/et_item_quantity"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintVertical_bias="0.062" />
</android.support.constraint.ConstraintLayout>
